<UserControl x:Class="QuanLyLuong.UserControls.LuongUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyLuong.UserControls"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Foreground="#667eea" Text="{Binding Title}" FontSize="24"></TextBlock>
        </Grid>
        <materialDesign:Card Grid.Row="1"
            materialDesign:ElevationAssist.Elevation="Dp1"
            Padding="2" Margin="0 0 0 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox Width="200" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                    <Button Command="{Binding SearchCommand}" VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="100" Content="Tìm kiếm" Margin="15 0"></Button>
                </StackPanel>
                <Grid Grid.Row="1">
                    <ListView
                    ItemsSource="{Binding ListItems}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding NgayBatDau, StringFormat ='{}{0:MM/yyyy}'}"
                                    Header="Lương tháng" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding NhanVien.MaNhanVienAsString}"
                            Header="Mã nhân viên" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding NhanVien.HoTen}"
                            Header="Tên nhân viên" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding LuongCoBan}"
                            Header="Lương CB" />

                                <GridViewColumn
                            DisplayMemberBinding="{Binding TamUng}"
                            Header="Tạm ứng" />
                                <GridViewColumn
                                DisplayMemberBinding="{Binding DieuChinh}"
                                Header="Điều chỉnh" />

                                <GridViewColumn
                            DisplayMemberBinding="{Binding CacKhoanCongThem}"
                            Header="Các khoản tăng thêm" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding CacKhoanTruDi}"
                            Header="Các khoản giảm trừ" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding LuongThucLinh}"
                            Header="Tổng cộng" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding ThuViec}"
                            Header="Thử việc" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding LuongSauThue}"
                            Header="Lương sau thuế" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding NgayTraLuong, StringFormat ='{}{0:dd/MM/yyyy}'}"
                            Header="Ngày trà lương" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </Grid.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Command="{Binding PreviewCommand}" Width="40" Margin="0 0 10 0" Style="{StaticResource MaterialDesignRaisedDarkButton}">
                            <materialDesign:PackIcon Foreground="White" Width="30" Height="30" Kind="ChevronLeft" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        <TextBlock Margin="0 0 10 0" Text="{Binding Page}" VerticalAlignment="Center" HorizontalAlignment="center" FontWeight="Bold" FontSize="24" Foreground="#512DA8"></TextBlock>
                        <Button Command="{Binding NextCommand}" Width="40" Style="{StaticResource MaterialDesignRaisedDarkButton}">
                            <materialDesign:PackIcon Foreground="White" Width="30" Height="30" Kind="ChevronRight" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        <TextBlock Margin="10 0 0 0" Text="Hiển thị "></TextBlock>
                        <TextBlock Text="{Binding StartRecord}"></TextBlock>
                        <TextBlock Text=" - "></TextBlock>
                        <TextBlock Text="{Binding EndRecord}"></TextBlock>
                        <TextBlock Text=" của "></TextBlock>
                        <TextBlock Text="{Binding TotalRecord}"></TextBlock>
                        <TextBlock Text=" bản ghi "></TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card  Grid.Row="2"
            materialDesign:ElevationAssist.Elevation="Dp1"
            Padding="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="15">
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Mã LNV:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding MaLNV, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Điều chỉnh:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding DieuChinh, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="15">
                    
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="15">
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Báo cáo:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox Text="{Binding Thang, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="30" VerticalAlignment="Bottom" />
                            <TextBlock Text="/" Margin="0 0 15 0" VerticalAlignment="Bottom"></TextBlock>
                            <TextBox Text="{Binding Nam, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="100" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <Button Command="{Binding GenerateCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Tính toán" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding TamUngCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Tạm ứng" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding AdjustCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Điều chỉnh" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding PaymentCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Trả lương" Margin="0 10 0 0"></Button>
                </StackPanel>
                <StackPanel Grid.Column="4">
                    <Button Command="{Binding DetailCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Chi tiết" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding ReloadCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120"  Content="Tải lại" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding ShowReportCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120"  Content="Báo cáo" Margin="0 10 0 0"></Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

    </Grid>
</UserControl>
