<UserControl x:Class="QuanLyLuong.UserControls.NhanVienUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyLuong.UserControls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="900" d:DesignWidth="1000">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Foreground="#667eea" Text="{Binding Title}" FontSize="24"></TextBlock>
        </Grid>
        <materialDesign:Card Grid.Row="1"
            materialDesign:ElevationAssist.Elevation="Dp1"
            Padding="2" Margin="0 0 0 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBox Width="200" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                    <Button Command="{Binding SearchCommand}" VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="100" Content="Tìm kiếm" Margin="15 0"></Button>
                </StackPanel>
                <Grid Grid.Row="1">
                    <ListView
                    ItemsSource="{Binding ListItems}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                DisplayMemberBinding="{Binding MaNhanVienAsString}"
                                Header="Mã NV" />
                                <GridViewColumn
                            DisplayMemberBinding="{Binding HoTen}"
                            Header="Họ tên" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding GioiTinh}"
                                    Header="Giới tính" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding NgaySinh, StringFormat='{}{0:dd/MM/yyyy}'}"
                                    Header="Ngày sinh" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding DienThoai}"
                                    Header="Điện thoại" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding Email}"
                                    Header="Email" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding PhongBan.TenPB}"
                                    Header="Phòng ban" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding QuocTich}"
                                    Header="Quốc tịch" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding NgayVaoLam}"
                                    Header="Ngày vào làm" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </Grid.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Command="{Binding PreviewCommand}" Width="40" Margin="0 0 10 0" Style="{StaticResource MaterialDesignRaisedDarkButton}">
                            <materialDesign:PackIcon Foreground="White" Width="30" Height="30" Kind="ChevronLeft" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        <TextBlock Margin="0 0 10 0" Text="{Binding Page}" VerticalAlignment="Center" HorizontalAlignment="center" FontWeight="Bold" FontSize="24" Foreground="#512DA8"></TextBlock>
                        <Button Command="{Binding NextCommand}" Width="40" Style="{StaticResource MaterialDesignRaisedDarkButton}">
                            <materialDesign:PackIcon Foreground="White" Width="30" Height="30" Kind="ChevronRight" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        <TextBlock Margin="10 0 0 0" Text="Hiển thị "></TextBlock>
                        <TextBlock Text="{Binding StartRecord}"></TextBlock>
                        <TextBlock Text=" - "></TextBlock>
                        <TextBlock Text="{Binding EndRecord}"></TextBlock>
                        <TextBlock Text=" của "></TextBlock>
                        <TextBlock Text="{Binding TotalRecord}"></TextBlock>
                        <TextBlock Text=" bản ghi "></TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card  Grid.Row="2"
            materialDesign:ElevationAssist.Elevation="Dp1"
            Padding="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="0" Margin="0">
                    <StackPanel>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Mã:" Margin="15 0 15 0" Height="16" VerticalAlignment="Top"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding MaNhanVien, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Họ Tên:" Margin="15 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding HoTen, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Email:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="CMTND:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding CMTND, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Điện thoại:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding DienThoai, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                <ScrollViewer VerticalScrollBarVisibility="Hidden"  Grid.Column="1" Margin="0">
                    <StackPanel>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Giới tính:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding GioiTinh, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Quốc tịch:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding QuocTich, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Quê quán:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding QueQuan, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Ngày sinh:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <DatePicker Margin="0 20 0 0" Text="{Binding NgaySinh, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Bộ phận:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding BoPhan, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Ngày vào làm:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <DatePicker Margin="0 20 0 0" Text="{Binding NgayVaoLam, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="2" Margin="0">
                    <StackPanel>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Chức vụ:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <ComboBox DisplayMemberPath="TenChucVu" SelectedItem="{Binding SelectedChucVu, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  ItemsSource="{Binding ListChucVus}" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Phòng ban:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <ComboBox DisplayMemberPath="TenPB" SelectedItem="{Binding SelectedPhongBan, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  ItemsSource="{Binding ListPhongBans}" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="TD chuyên môn:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <ComboBox DisplayMemberPath="TenTDHV" SelectedItem="{Binding SelectedTrinhDoHocVan, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  ItemsSource="{Binding ListTrinhDoHocVans}" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*"/>
                                    <ColumnDefinition Width="7*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="TD ngoại ngữ:" Margin="0 0 15 0" Grid.ColumnSpan="2"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <ComboBox DisplayMemberPath="TenTDNgoaiNgu" SelectedItem="{Binding SelectedTrinhDoNgoaiNgu, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  ItemsSource="{Binding ListTrinhDoNgoaiNgus}" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Bậc lương:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <ComboBox DisplayMemberPath="TenBacLuong" SelectedItem="{Binding SelectedBacLuong, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"  ItemsSource="{Binding ListBacLuongs}" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                                </ComboBox>
                            </Grid>
                        </Grid>
                        <Grid Height="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Tài khoản:" Margin="0 0 15 0"></TextBlock>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBox Text="{Binding TenDangNhap, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Grid.Column="3">
                    <Button Command="{Binding AddCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Thêm" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding EditCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Sửa" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding DeleteCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Xóa" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding ReloadCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Tải lại" Margin="0 10 0 0"></Button>
                </StackPanel>
                <StackPanel Grid.Column="4">
                    <Button Command="{Binding CreateAccountCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120"  Content="Tạo tài khoản" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding ShowProfileCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Hợp đồng" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding ShowReportCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Báo cáo" Margin="0 10 0 0"></Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
