<UserControl x:Class="QuanLyLuong.UserControls.ChamCongUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyLuong.UserControls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="700" d:DesignWidth="1000">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Foreground="#667eea" Text="{Binding Title}" FontSize="24"></TextBlock>
        </Grid>
        <materialDesign:Card Grid.Row="1"
            materialDesign:ElevationAssist.Elevation="Dp1"
            Padding="2" Margin="0 0 0 5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Chọn tháng:" Margin="0 0 0 0" VerticalAlignment="Bottom"></TextBlock>
                    <TextBox Width="50" Text="{Binding Thang, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBox>
                    <TextBlock Text="/" Margin="0 0 0 0" VerticalAlignment="Bottom"></TextBlock>
                    <TextBox Width="100" Text="{Binding Nam, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Bottom" Margin="0 0 50 0"></TextBox>
                    
                    <TextBox Width="200" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
                    <Button Command="{Binding SearchCommand}" VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="100" Content="Tìm kiếm" Margin="15 0"></Button>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="395*"/>
                        <ColumnDefinition Width="571*"/>
                    </Grid.ColumnDefinitions>
                    <ListView
                    ItemsSource="{Binding ListItems}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding NhanVien.MaNhanVienAsString}"
                                    Header="Mã nhân viên" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding NhanVien.HoTen}"
                                    Header="Tên nhân viên" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding SoNgayLam}"
                                    Header="Số ngày làm" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding SoNgayTangCa}"
                                    Header="Số ngày tăng ca" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding DiMuon}"
                                    Header="Đị muộn" />
                                <GridViewColumn
                                    DisplayMemberBinding="{Binding VeSom}"
                                    Header="Về sớm" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </Grid.Resources>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Command="{Binding PreviewCommand}" Width="40" Margin="0 0 10 0" Style="{StaticResource MaterialDesignRaisedDarkButton}">
                            <materialDesign:PackIcon Foreground="White" Width="30" Height="30" Kind="ChevronLeft" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        <TextBlock Margin="0 0 10 0" Text="{Binding Page}" VerticalAlignment="Center" HorizontalAlignment="center" FontWeight="Bold" FontSize="24" Foreground="#512DA8"></TextBlock>
                        <Button Command="{Binding NextCommand}" Width="40" Style="{StaticResource MaterialDesignRaisedDarkButton}">
                            <materialDesign:PackIcon Foreground="White" Width="30" Height="30" Kind="ChevronRight" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                        <TextBlock Margin="10 0 0 0" Text="Hiển thị "></TextBlock>
                        <TextBlock Text="{Binding StartRecord}"></TextBlock>
                        <TextBlock Text=" - "></TextBlock>
                        <TextBlock Text="{Binding EndRecord}"></TextBlock>
                        <TextBlock Text=" của "></TextBlock>
                        <TextBlock Text="{Binding TotalRecord}"></TextBlock>
                        <TextBlock Text=" bản ghi "></TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card  Grid.Row="2"
            materialDesign:ElevationAssist.Elevation="Dp1"
            Padding="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="15">
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Nhân viên:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding MaNhanVien, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="15">
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Số ngày tăng ca:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding SoNgayTangCa, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Số ngày làm:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding SoNgayLam, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="15">
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Đi muộn:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding DiMuon, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                    <Grid Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <TextBlock Text="Về sớm:" Margin="0 0 15 0"></TextBlock>
                        </Grid>
                        <Grid Grid.Column="1">
                            <TextBox Text="{Binding VeSom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        </Grid>
                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <Button Command="{Binding GetDataCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Lấy dữ liệu" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding EditCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Chỉnh sửa" Margin="0 10 0 0"></Button>
                    <Button Command="{Binding ReloadCommand}" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="120" Content="Tải lại" Margin="0 10 0 0"></Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
